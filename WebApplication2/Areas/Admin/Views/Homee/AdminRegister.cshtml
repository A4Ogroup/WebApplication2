@model AdminRegisterViewModel

@{
    Layout = "_Layout";
}
<style>



    .step-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 0 20px;
        padding-bottom: 2rem;
        /*             border-bottom: 1px solid #df2d30;
             */
    }

    .step {
        flex: 1;
        text-align: start;
        font-weight: 500;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

        .step.active .step-label {
            color: #212F38;
            font-weight: bold;
        }

    .step-container .step-bar:nth-child(1) {
        border-radius: 20px;
        border-bottom-left-radius: 20px;
    }

    .step .step-bar {
        height: 5px;
        margin-bottom: 2px;
        background-color: #dedada;
    }

    .step.active .step-bar {
        background-color: #df2d30;
    }

    .step .step-label {
        color: #6c757d;
        margin-bottom: 10px;
    }

    .step:not(:last-child) {
        margin-right: 5px;
    }

    @@media (max-width: 768px) {
        .step {
            font-size: 14px;
        }
    }

    .form-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 5px 10px #e2e0e0;
        margin: 100px 0 0;
    }

    .form input {
        border: 2px solid #e2e0e0;
    }

    .from input:focus {
        outline: none !important;
        border: none !important;
    }

    .form-title {
        font-size: 1.50rem;
        font-weight: bold;
        margin-bottom: 20px;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    .btn-next {
        background-color: #df2d30;
        color: #fff;
    }

        .btn-next:hover {
            background-color: #e8e8e8;
            border: solid #df2d30 2px;
            color: #df2d30;
        }

    .btn-back {
        background-color: #e8e8e8;
        color: #212F38;
    }

    .form-text-help {
        margin-top: 20px;
        color: #6c757d;
    }

        .form-text-help a {
            color: #212F38;
            text-decoration: none;
        }

            .form-text-help a:hover {
                text-decoration: underline;
            }
</style>



<div class="row justify-content-center " style="">
    <div class="col-md-7">
        <div class="form-container ">

            <div class="container mt-5">
                <!--<div class="tab-container d-flex justify-content-between align-items-center mb-4">-->
                <div class="step-container">
                    <div class="step active">
                        <div class="step-label">Account Information</div>
                        <div class="step-bar"></div>
                    </div>

                    @* <div class="step">
                    <div class="step-label">Pages & Components</div>
                    <div class="step-bar"></div>
                    </div> *@
                </div>




                <div class="form-title">Account Information</div>
                <form class="form" asp-action="adminregister" asp-controller="homee" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-4">
                        <label class="form-label">Email Address *</label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">User Name *</label>
                        <input asp-for="UserName" class="form-control">
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div> 
                    <div class="mb-4">
                        <label class="form-label">First Name *</label>
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                    </div> 
                    <div class="mb-4">
                        <label class="form-label">Last Name *</label>
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>
                    <div class="mb-4">
                        <label class="form-label">Password *</label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="mb-4">
                        <label class="form-label">Confirm Password *</label>
                        <input asp-for="ConfirmPassword" class="form-control">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>
                    <div class="d-flex justify-content-between">
                        @* <button type="button" class="btn btn-back">Back</button> *@
                        <button type="submit" class="btn btn-next" style="margin-left:auto;">Submit</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>





@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
