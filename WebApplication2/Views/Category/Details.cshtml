            font-size: 14px;
            color: gray;
            margin-bottom: 10px;
        }

        .result-item .price {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

    .footer {
        background-color: black;
        color: white;
        text-align: center;
        padding: 40px 20px;
        margin-top: 40px;
    }

        .footer img {
            margin: 0 10px;
            height: 30px;
            width: 30px;
        }

    @@media (max-width: 992px) {
        .result-item {
            flex-direction: column;
            align-items: flex-start;
        }

            .result-item img {
                width: 100%;
                height: auto;
                margin-bottom: 10px;
            }

        header {
            text-align: center;
        }

        .filter-toggle {
            display: block;
        }

        .sidebar {
            border-right: none;
        }
    }

    .text-purple {
        color: #6f42c1;
    }


</style>
