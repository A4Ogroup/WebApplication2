@{
    Layout = "_Layout";
}

<head>
    <style>
        .main-content {
            padding: 20px;
        }

        .sidebar {
            padding-right: 20px;
            border-right: 1px solid #ddd;
        }

        .filter-section {
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
            margin-bottom: 10px;
        }

            .filter-section h4 {
                cursor: pointer;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

                .filter-section h4:hover {
                    color: #007acc;
                }

            .filter-section svg {
                transition: transform 0.2s;
            }

        .filter-options {
            display: none;
            margin-top: 10px;
        }

        .text-purple {
            color: #6f42c1;
        }

        .table thead th {
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody td {
            vertical-align: middle;
        }

        .btn-action {
            margin-right: 5px;
        }
    </style>
</head>



<div class="container-fluid main-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="sidebar d-none d-lg-block">
                <div class="filter-section">
                    <h3>Admin DashBoard</h3>
                </div>
                <div class="filter-section">
                    <a>
                        <h4>Admins</h4>
                    </a>
                </div>
                <div class="filter-section">
                    <a>
                        <h4>Instructors</h4>
                    </a>
                </div>
                <div class="filter-section">
                    <a asp-controller ="admin" asp-action="course">
                        <h4>Courses</h4>
                    </a>
                </div>
                <div class="filter-section">
                    <a>
                        <h4>Reports</h4>
                    </a>
                </div>
                <div class="filter-section">
                    <a asp-controller="admin" asp-action="review">
                        <h4>Reviews</h4>
                    </a>
                </div>
            </div>
        </div>

       @RenderBody()

    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
@RenderSection("Scripts", required: false)
