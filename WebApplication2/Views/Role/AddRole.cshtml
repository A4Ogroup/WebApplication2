@model RoleViewModel

@{
    Layout = "_Layout";
}

<style>
    .banner-item-1 {
        padding: 50px 0px;
        background-repeat: no-repeat;
        background-position: center center;
    }
</style>
<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        <div class="banner-item-1">
        </div>
    </div>
</div>


<!-- Login 6 - Bootstrap Brain Component -->

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
            <div class=" border-0 shadow-sm rounded-4">
                <div class=" p-3 p-md-4 p-xl-5">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-5">
                                <h2>Add Role</h2>
                            </div>
                        </div>
                    </div>
                    <form enctype="multipart/form-data" method="post" asp-action="addrole">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row gy-3 overflow-hidden">
                            <div class="col-12">
                                <div class="form-floating mb-1">
                                    <input asp-for="RoleName" class="form-control" placeholder="Write a role">
                                    <label for="RoleName" class="form-label">Role</label>
                                </div>
                            </div>
 
                            <div class="col-12">

                                <button class="btn bsb-btn-2xl btn-primary filled-button" type="submit">Submit</button>

                            </div>
                        </div>
                    </form>



                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {


    <script>
        $('.btn').click(function () {
            $('.collapse-content').toggle();
        });
    </script>

}


