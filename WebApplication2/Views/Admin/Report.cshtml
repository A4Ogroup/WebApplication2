@using static WebApplication2.ViewModels.PagenationViewModel
@model PaginatedList<Report>

@{
    Layout = "_Admin1Layout";
}

<style>
    /* Custom styles for dashboard cards */
    .card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .card-body {
        padding: 20px;
    }

    .icon-shape {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .text-success {
        color: #28a745 !important;
    }

    .text-danger {
        color: #dc3545 !important;
    }

    h5 {
        margin: 0;
        font-weight: 600;
    }

    h2 {
        margin: 10px 0;
        font-weight: 700;
    }

    .small {
        font-size: 0.875em;
    }

    .description {
        display: inline;
    }

    .more-text {
        display: none;
    }

    .see-more {
        color: blue;
        cursor: pointer;
    }

</style>



<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-5">
                <h4 class="page-title">Reports</h4>

            </div>
            <div class="col-7">
                @*              <div class="text-end upgrade-btn">
                <a href="https://www.wrappixel.com/templates/xtremeadmin/" class="btn btn-danger text-white"
                target="_blank">Upgrade to Pro</a>
                </div> *@
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Sales chart -->
        <!-- ============================================================== -->
        <!-- Sales chart -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Table -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <!-- title -->
                        <div class="d-md-flex">
                            <div>
                                <h4 class="card-title"></h4>
                                <h5 class="card-subtitle"></h5>
                            </div>
                            @*                                 <div class="ms-auto">
                            <div class="dl">
                            <select class="form-select shadow-none">
                            <option value="0" selected>Monthly</option>
                            <option value="1">Daily</option>
                            <option value="2">Weekly</option>
                            <option value="3">Yearly</option>
                            </select>
                            </div>
                            </div> *@
                        </div>
                        <!-- title -->
                    </div>
                    <div id="course-list" class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr class="bg-light">
                                    <th scope="col">Student</th>
                                    <th scope="col">Review</th>
                                    <th scope="col">Report Message</th>
                                    <th scope="col"> Date</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody> 
                                @foreach (var report in Model)
                                {
                                    <tr>
                                          <td>@report.ReviewId</td>
                                         <td>@report.Review.Descritipn </td>  
                                        <td>@report.Message</td>
                                          <td>@report.ReportDate</td>
                                          <td>
                                            <div class="dropdown">
                                                <button class="btn btn-link p-0"
                                                        type="button"
                                                        id="dropdownMenuButton1"
                                                        data-bs-toggle="dropdown"
                                                        aria-haspopup="true"
                                                        aria-expanded="false">
                                                    <i class="fa fa-ellipsis-v"></i>
                                                </button>
                                                <div class="dropdown-menu dropdown-menu-right"
                                                     aria-labelledby="dropdownMenuButton1">
                                                    <a class="dropdown-item" asp-controller="report" asp-action="editreport" asp-route-Id="@report.ReportId">Update</a>
                                                    <a class="dropdown-item" asp-controller="report" asp-action="delete" asp-route-Id="@report." onclick="return confirm('Are you sure you want to delete this report?');">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="report" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" asp-action="report" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="report" asp-route-pageNumber="@(Model.PageIndex + 1)"> </a>
                </li>
            </ul>
        </nav>
    </div>

</div>

@section Scripts {
                               
 <script>
        $(".see-more").click(function () {
            const moreText = $(this).siblings(".more-text");
            if (moreText.is(":visible")) {
                $(this).text("...See More");
            } else {
                $(this).text("...See Less");
            }
            moreText.toggle();
        });
 </script>
}