@using static WebApplication2.ViewModels.PagenationViewModel
@model PaginatedList<Review>

@{
    Layout = "_AdminLayout";
}
<div class="col-lg-9">
    <h2 id="results-count">
      
    </h2>

    <div id="course-list">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">UserName</th>
                    <th scope="col">Rating</th>
                    <th scope="col">CourseName</th>
                    <th scope="col">Addition Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td>@review.Student</td>
                        <td>
                            <ul class="stars" style="color:red">
                                @switch (review.Rate)
                                {
                                    case 5:
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        break;
                                    case 4:
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        break;
                                    case 3:
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        break;
                                    case 2:
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        break;
                                    default:
                                        <i class="fa fa-star"></i>
                                        break;
                                }
                            </ul>
                        </td>
                        <td>@review.Course.Title</td>
                        <td>@review.RatingDate</td>
                        <td>
                            <a href="@Url.Action("EditReview", "review", new { id = review.ReviewId })" class="btn btn-light btn-action">Update</a>
                            <a href="@Url.Action("Delete", "review", new { id = review.ReviewId })" class="btn btn-light btn-action" onclick="return confirm('Are you sure you want to delete this review?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>
