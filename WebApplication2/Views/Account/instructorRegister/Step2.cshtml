                        <div class="mb-4">
                            <label class="form-label">Gender *</label>
                            <select class="form-select">
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>
                        </div> *@
                        <div class="d-flex justify-content-between">
                          <a  asp-action="Step1" asp-controller="account">  <button type="button" class="btn btn-back">< Back</button> </a>
                                   <button type="submit" class="btn btn-next">Next > </button>   
                        </div>
                        <div class="form-text-help text-center">
                            Stuck on the form? <a href="#">Let's call you!</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>





    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"></script>


    <script>
        var input = document.querySelector("#phone");
        var validationMessage = document.getElementById("validation-message");
        var iti = window.intlTelInput(input, {
            initialCountry: "auto",
            geoIpLookup: function (callback) {
                fetch('https://ipinfo.io?token=YOUR_TOKEN_HERE')
                    .then(function (resp) { return resp.json(); })
                    .then(function (resp) {
                        var countryCode = (resp && resp.country) ? resp.country : "us";
                        callback(countryCode);
                    });
            },
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"
        });

        input.addEventListener('input', function () {
            try {
                iti.setNumber(input.value);
            } catch (error) {
                console.log('Error setting number: ', error);
            }
        });

        input.addEventListener('blur', function () {
            if (iti.isValidNumber()) {
                validationMessage.textContent = 'Phone number is valid';
                validationMessage.style.color = 'green';
            } else {
                validationMessage.textContent = 'Phone number is not valid';
                validationMessage.style.color = 'red';
            }
        });
    </script>
    }





