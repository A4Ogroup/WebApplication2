@model InstructorInfoViewModel
    <style>
        

@{
    Layout="_layout";
}
        .step-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 0 20px;
            padding-bottom: 0.5rem;
            /*             border-bottom: 1px solid #df2d30;
         */
        }

        .step {
            flex: 1;
            text-align: center;
            font-weight: 500;
        }

            .step.active .step-label {
                color: #212F38;
                font-weight: bold;
            }

            .step .step-bar:nth(1) {
                border-bottom-left-radius: 20px;
                border-bottom-left-radius: 2px;
            }

            .step .step-bar {
                height: 5px;
                margin-bottom: 2px;
                background-color: #dedada;
            }

            .step.active .step-bar {
                background-color: #df2d30;
            }

            .step .step-label {
                color: #6c757d;
            }

            .step:not(:last-child) {
                margin-right: 5px;
            }

        @@media (max-width: 768px) {
            .step {
                font-size: 14px;
            }
        }

        .form-container {
            background-color: #fff;
            padding:  30px ;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 40px 0 0;
        }

        .form-title {
            font-size: 1.50rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .btn-next {
            background-color: #df2d30;
            color: #fff;
        }

            .btn-next:hover {
                background-color: #c72b2e;
            }

        .btn-back {
            background-color: #e8e8e8;
            color: #212F38;
        }

        .form-text-help {
            margin-top: 20px;
            color: #6c757d;
        }

            .form-text-help a {
                color: #212F38;
                text-decoration: none;
            }

                .form-text-help a:hover {
                    text-decoration: underline;
                }
    </style>



