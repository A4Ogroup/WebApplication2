@model InstructorProfessionViewModel

@{
    Layout = "_layout";
}
    <style>
        


        .step-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 0 20px;
            padding-bottom: 0.5rem;
            /*             border-bottom: 1px solid #df2d30;
         */
        }

        .step {
            flex: 1;
            text-align: center;
            font-weight: 500;
        }

            .step.active .step-label {
                color: #212F38;
                font-weight: bold;
            }

            .step .step-bar:nth(1) {
                border-bottom-left-radius: 20px;
                border-bottom-left-radius: 2px;
            }

            .step .step-bar {
                height: 5px;
                margin-bottom: 2px;
                background-color: #dedada;
            }

            .step.active .step-bar {
                background-color: #df2d30;
            }

            .step .step-label {
                color: #6c757d;
            }

            .step:not(:last-child) {
                margin-right: 5px;
            }

        @@media (max-width: 768px) {
            .step {
                font-size: 14px;
            }
        }

        .form-container {
            background-color: #fff;
            padding: 10px 30px 10px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 40px 0 0;
        }

        .form-title {
            font-size: 1.50rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .btn-next {
            background-color: #df2d30;
            color: #fff;
        }

            .btn-next:hover {
                background-color: #c72b2e;
            }

        .btn-back {
            background-color: #e8e8e8;
            color: #212F38;
        }

        .form-text-help {
            margin-top: 20px;
            color: #6c757d;
        }

            .form-text-help a {
                color: #212F38;
                text-decoration: none;
            }

                .form-text-help a:hover {
                    text-decoration: underline;
                }
    </style>



    <div class="row justify-content-center " style="">
        <div class="col-md-8">
            <div class="form-container ">

                <div class="container mt-5">
                    <!--<div class="tab-container d-flex justify-content-between align-items-center mb-4">-->
                    <div class="step-container">
                        <div class="step active">
                            <div class="step-label">Account Information</div>
                            <div class="step-bar"></div>
                        </div>
                        <div class="step active">
                            <div class="step-label">Personal Information</div>
                            <div class="step-bar"></div>
                        </div>
                        <div class="step active">
                            <div class="step-label">Profession Information</div>
                            <div class="step-bar"></div>
                        </div>
                        @* <div class="step">
                            <div class="step-label">Pages & Components</div>
                            <div class="step-bar"></div>
                        </div> *@
                    </div>




                    <div class="form-title">Profession Information</div>
                    <form asp-action="Step3" asp-controller="Account" method="post">
                        <div class="mb-4">
                            <label class="form-label">Professsion Title *</label>
                           <input asp-for="Profession" class="form-control">
                           <span asp-validation-for="Profession" class="text-danger"></span>

                       </div>
                        <div class="mb-4">
                            <label class="form-label">Years Of Experience *</label>
                          <input asp-for="YearsExperince" class="form-control">
                          <span asp-validation-for="YearsExperince" class="text-danger"></span>

                      </div>
                    <div class="mb-4">
                        <label class="form-label"> Summary About You   <small style="color:gray;margin-left:5px;">  add a bio to your profile</small></label>
                        <textarea asp-for="About" class="form-control" rows="6" style="height:40px;"> </textarea>
                        <span asp-validation-for="About" class="text-danger"></span>
                    </div>
                    <label>Website <small style="color:gray;">   optional</small></label>
                    <div class="mb-2 mt-0" style="display:flex; align-items:center;justify-content:flex-start">

                        <svg width="20px" height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15.197 3.35462C16.8703 1.67483 19.4476 1.53865 20.9536 3.05046C22.4596 4.56228 22.3239 7.14956 20.6506 8.82935L18.2268 11.2626M10.0464 14C8.54044 12.4882 8.67609 9.90087 10.3494 8.22108L12.5 6.06212" stroke="#1C274C" stroke-width="1.5" stroke-linecap="round" />
                            <path d="M13.9536 10C15.4596 11.5118 15.3239 14.0991 13.6506 15.7789L11.2268 18.2121L8.80299 20.6454C7.12969 22.3252 4.55237 22.4613 3.0464 20.9495C1.54043 19.4377 1.67609 16.8504 3.34939 15.1706L5.77323 12.7373" stroke="#1C274C" stroke-width="1.5" stroke-linecap="round" />
                        </svg>
                        <input asp-for="Website" class="form-control" style="margin left:7px;" placeholder="Website">
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                         

                            <label class="form-label" style="display:block;"> Social Accounts </label>
