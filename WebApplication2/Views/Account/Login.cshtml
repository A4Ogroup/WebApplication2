@model LoginViewModel

<partial name="_NotificationPartial"></partial>
@{
    Layout = "_Layout";
}

<style>
    .banner-item-1 {
        padding: 50px 0px;
        background-repeat: no-repeat;
        background-position: center center;
    }
</style>
<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        <div class="banner-item-1">
        </div>
    </div>
</div>


<!-- Login 6 - Bootstrap Brain Component -->

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
            <div class=" border-0 shadow-sm rounded-4">
                <div class=" p-3 p-md-4 p-xl-5">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-5">
                                <h2>Login</h2>
                            </div>
                        </div>
                    </div>
                    <form enctype="multipart/form-data" method="post" asp-action="login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row gy-3 overflow-hidden">
                            <div class="col-12">
                                <div class="form-floating mb-1">
                                    <input asp-for="Email"  class="form-control" placeholder="name@example.com">
                                    <label for="email" class="form-label">Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-1">
                                    <input asp-for="Password"  class="form-control" placeholder="Password">
                                    <label for="password" class="form-label">Password</label>
                                </div>
                            </div>
                            <div class="col-12">

                                <div class="d-flex">
                                    <input type="checkbox" style="width:20px; height:25px; margin-right:3px;">Remmber Me


                                </div>
                            </div>
                            <div class="col-12">
                           
                                    <button class="btn bsb-btn-2xl btn-primary filled-button" type="submit">Login</button>
                           
                            </div>
                        </div>
                    </form>

                    <div class="row">
                        <div class="col-12">
                            <p class="mt-5 mb-4">Or continue with</p>
                            <div class="d-flex gap-3 flex-column">
                                <a href="#!" class="btn bsb-btn-xl btn-outline-danger btn-light" style="color:white; background-color: red;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                                        <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                                    </svg>
                                    <span class="ms-2 fs-6 text-uppercase">Sign in With Google</span>
                                </a>


                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <hr class="mt-5 mb-4 border-secondary-subtle">
                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">

                                <p> Don't have account <a class="link-secondary btn btn-light" asp-controller="account" asp-action="StudentRegister">Create an account</a></p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $('.btn').click(function () {
            $('.collapse-content').toggle();
        });
    </script>

}


